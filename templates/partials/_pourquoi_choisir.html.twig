<section class="pourquoi-choisir" id="services">
  <div class="container">
    <h2>{{ 'why.title'|trans }}</h2>
    <div class="avantages">
      {% for avantage in avantages %}
        <div class="avantage-card">
          <img src="{{ asset(avantage.icon) }}" alt="">
          <h3>{{ avantage.titre|trans }}</h3>
          <p>{{ avantage.description|trans }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>