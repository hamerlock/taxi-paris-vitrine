{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
{% endblock %}

<section class="hero" style="background-image: url('{{ asset('images/hero-bg.jpg') }}');">
  <div class="container hero-content">
    <h1>{{ 'hero.title'|trans }}</h1>
    <p class="hero-subtitle">{{ 'hero.subtitle'|trans }}</p>
    <div class="hero-buttons">
      <a href="tel:0189705051" class="btn btn-primary"><i class="fas fa-phone"></i> {{ 'hero.call_now'|trans }}</a>
      <a href="{{ path('home', {'_locale': app.request.locale}) }}#reservation" class="btn btn-secondary"><i class="fas fa-calendar-check"></i> {{ 'hero.book_online'|trans }}</a>
    </div>
    <ul class="hero-infos">
      <li><i class="fas fa-euro-sign"></i> {{ 'hero.fixed_price'|trans }}</li>
      <li><i class="fas fa-suitcase"></i> {{ 'hero.luggage_included'|trans }}</li>
      <li><i class="fas fa-sign"></i> {{ 'hero.sign_greeting'|trans }}</li>
      <li><i class="fas fa-clock"></i> {{ 'hero.available'|trans }}</li>
    </ul>
  </div>
</section>